<% include ../partials/header %>

<div class='container'>

    <div class='editTitle'><h1 class="display-4" id="one">Edit Icebreaker</h1></div>
       
    <form action="/icebreakers/<%= icebreaker._id%>/?_method=PUT" method="POST">
        <div class='formContainer'>
          
            <div class="form-group">
                <label>Ask your teammates an icebreaker!</label>
                <input type="text" class="form-control" value='<%= icebreaker.question%>' name="icebreaker[question]" required autocomplete="off" >
            </div>
            
            <div class="form-group">
                <label for="exampleTextarea">Answer the icebreaker and share a cool story or fact about yourself.</label>
                <textarea class="form-control" id="exampleTextarea" name="icebreaker[text]" required rows="3" autocomplete="off" ><%= icebreaker.text%></textarea>
            </div>
            
            <button type="submit" class="btn btn-primary btnBlue">Submit</button>
        </div>
    </form>
    
    <div><a href='/icebreakers' class="btn btn-primary btnBlue">Index</a></div>

</div>

<% include ../partials/footer %>