<% include ../partials/header %>

<div class='container'>

    <div><h1 class="display-4 editTitle" id="one">Edit Team</h1></div>
       
    <form action="/teams/<%= team._id%>/?_method=PUT" method="POST">
        <div class='formContainer'>
          
            <div class="form-group">
                <label for="teamName">Team Name</label>
                <input type="text" class="form-control" id="teamName" name="teamName" value='<%= team.teamName%>' required>
            </div>

            <button type="submit" class="btn btn-primary btnBlue">Submit</button>
        </div>
    </form>
    
    <div><a href='/teams' class="btn btn-primary btnBlue">Team Index</a></div>

</div>

