<% include ../partials/header %>

<div class='container'>
    <div class='teams' style='padding: 0 35px;'>
        <div><br><h1 class="display-4 showOverflow" id="one"><%= team.teamName%></h1></div>
        <div>
            <p>
                Created by <%= team.creator.username %>  
                    <% if(currentUser && currentUser.facebook.id === team.creator.id) { %>
                        <span class="input-group">
                            <a href='/teams/<%= team._id%>/edit' class='btn btn-secondary btnSmall'>edit</a>
                        </span>
                    <% } %>   
            </p>
        </div>
        
        <div><hr class='style-two'></div>
        
        
        <div class='showDiv row'>
            <% for(var i = (team.icebreakers.length - 1); i>= 0; i--){ %>
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <a class='login' href="/icebreakers/<%= team.icebreakers[i]._id %>">
                        <div class="thumbnail">
                            <h4 class="hideOverflow"><%= team.icebreakers[i].question %></h4>
                        </div>
                    </a>
                </div>
            <% } %>
            
            
           
            
            
            
        </div>
    <div class='row buttonCenter'><a class="btn btnBlue btn-lg" href="/teams/<%= team._id %>/new_icebreaker" role="button">Create Icebreaker</a></div>
    </div>
    <div><a href='/teams' class="btn btn-primary btnBlue">Index</a></div>
    </div>
</div>

<% include ../partials/footer %>